#!/usr/bin/ruby

STDERR.print <<~EOS
  Deprecation Notice:
  Homebrew installer was rewritten to a bash script installer. Please switch to the following command.
    bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"

EOS

Kernel.exec "bash", "-c", 'bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"'
